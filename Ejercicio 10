Algoritmo ContarSignos
    Definir i, num Como Entero;
    Definir pos, neg, nulo Como Entero;
    pos <- 0;
    neg <- 0;
    nulo <- 0;
    
    Escribir "Iniciando lectura y clasificación de 100 números.";
    Escribir "---";
    
    Para i <- 1 Hasta 100 Con Paso 1 Hacer
        Escribir "Ingrese el número ", i, " de 100:";
        Leer num;
        Si num > 0 Entonces
            pos <- pos + 1;
        SiNo
            Si num < 0 Entonces
                neg <- neg + 1;
            SiNo
                nulo <- nulo + 1;
            FinSi
        FinSi
    FinPara
  
    Escribir "---";
    Escribir "Proceso de lectura finalizado.";
    Escribir "Resultados del conteo:";
    Escribir "Números Positivos ( > 0): ", pos;
    Escribir "Números Negativos ( < 0): ", neg;
    Escribir "Números Nulos ( = 0): ", nulo;
FinAlgoritmo
