Algoritmo ProductoPrimerosNaturales
    Definir N, i Como Entero;
    Definir producto Como Real;
    Escribir "Ingrese el número entero N (hasta dónde calcular el producto):";
    Leer N;
    producto <- 1;
    Escribir "---";
    Para i <- 1 Hasta N Con Paso 1 Hacer
        producto <- producto * i;
    FinPara
    Escribir "El producto de los primeros ", N, " números naturales es: ", producto;
    Escribir "---";
    
FinAlgoritmo
