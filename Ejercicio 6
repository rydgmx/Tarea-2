Algoritmo CalcularAumentoDeSueldo
    Definir sueldoActual, aumento, nuevoSueldo Como Real;
    Escribir "Ingrese el sueldo actual del trabajador ($):";
    Leer sueldoActual;
    Si (sueldoActual < 1000) Entonces
   aumento <- sueldoActual * 0.15;
        Escribir "El sueldo es inferior a $1,000. Se aplicará un aumento del 15%.";
    SiNo
        aumento <- sueldoActual * 0.12;
        Escribir "El sueldo es igual o superior a $1,000. Se aplicará un aumento del 12%.";
    FinSi
    
   
    nuevoSueldo <- sueldoActual + aumento;


    Escribir "--- Resumen del Sueldo ---";
    Escribir "Sueldo Base: $", sueldoActual;
    Escribir "Monto del Aumento: $", aumento;
    Escribir "Nuevo Sueldo Total: $", nuevoSueldo;

FinAlgoritmo
