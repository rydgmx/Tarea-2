Algoritmo SumaNumerosPares
    Definir i Como Entero;
    Definir suma Como Entero;
    suma <- 0;
    
    Escribir "Calculando la suma de los números pares entre 10 y 50.";
    Escribir "---";
    Para i <- 10 Hasta 50 Con Paso 2 Hacer
     
        suma <- suma + i;
        
    FinPara
    Escribir "---";
    Escribir "La suma total de los números pares entre 10 y 50 es: ", suma;
FinAlgoritmo
